/ # cat scale_test 
#/bin/sh

i=0
while [ $i -lt 1000000 ]
do
        eve_run move -i a -o b > /dev/null
	i=$((i+1))
	result=`expr $i % 10000`
	if [ $result -eq 0 ]; then
           echo $i, $result
        fi
done
